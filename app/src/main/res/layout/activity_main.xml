<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите значение (руб.)" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Добавить"/>


    <TextView
        android:id="@+id/text_view_output"
        android:layout_width="363dp"
        android:layout_height="230dp"
        android:text="Ваши траты:" />

    <EditText
        android:id="@+id/edit_text_input1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите значение (руб.)" />

    <Button
        android:id="@+id/add_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Добавить"/>


    <TextView
        android:id="@+id/text_view_output1"
        android:layout_width="363dp"
        android:layout_height="230dp"
        android:text="Ваши расходы:" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/mobility_pie_chart"
        android:layout_width="367dp"
        android:layout_height="300dp"
        android:layout_x="45dp"
        android:layout_y="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32">


    </com.github.mikephil.charting.charts.PieChart>

</LinearLayout>